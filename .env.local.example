
# Firebase Configuration - Copy this to .env.local and fill in your values
# Get these from your Firebase project settings > General
NEXT_PUBLIC_FIREBASE_API_KEY=YOUR_API_KEY
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=YOUR_AUTH_DOMAIN
NEXT_PUBLIC_FIREBASE_PROJECT_ID=YOUR_PROJECT_ID
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=YOUR_STORAGE_BUCKET
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=YOUR_MESSAGING_SENDER_ID
NEXT_PUBLIC_FIREBASE_APP_ID=YOUR_APP_ID
# Optional: Add if you use Firebase Analytics
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=YOUR_MEASUREMENT_ID

# IMPORTANT: For ADMIN setup during development ONLY.
# Replace with the UID of the user you want to initially grant admin rights to via the settings page button.
# THIS IS NOT SECURE FOR PRODUCTION. Remove or secure this in a real application.
NEXT_PUBLIC_INITIAL_ADMIN_UID=REPLACE_WITH_YOUR_ADMIN_UID

# Optional: Add Google GenAI API Key if using Genkit/AI features
# GOOGLE_GENAI_API_KEY=YOUR_GOOGLE_GENAI_API_KEY
