
rules_version = '2';

// Default rule: Allow read/write access to authenticated users.
// Adjust these rules based on your specific storage needs (e.g., public read for images).
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Example: Allow public read access to images in an 'images' folder
    // match /images/{imageId} {
    //   allow read: if true;
    //   allow write: if request.auth != null; // Or more specific rules
    // }
  }
}
